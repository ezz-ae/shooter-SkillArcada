{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "outDir": "lib",
    "moduleResolution": "node16",
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}